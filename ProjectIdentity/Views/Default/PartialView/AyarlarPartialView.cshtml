@model UserEditViewModel
<div class="col-12 col-xl-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-0">Profil Düzenle</h6>
        </div>
        <div class="card-body p-3">
          
            <form method="post">
                <input type="text" asp-for="Name" class="form-control mb-3" placeholder="Adınız"  />
                <input type="text" asp-for="Surname" class="form-control mb-3" placeholder="Soyadınız" />
                <input type="text" asp-for="Phone" class="form-control mb-3" placeholder="Telefon Numaranız" />
                <input type="email" asp-for="Mail" class="form-control mb-3" placeholder="Mail" />
                <input type="text" asp-for="City" class="form-control mb-3" placeholder="Adres" />

                <button type="button" class="btn bg-gradient-secondary mb-4" data-bs-toggle="modal" data-bs-target="#exampleModal" style="margin-right:0.5rem">
                    <i class="far fa-envelope" style="margin-right:0.5rem"></i>Kaydet
                </button>

                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" style="display: none;" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Profil Düzenlemesi Kaydolsun Mu?</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">İPTAL</span>
                                </button>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">İPTAL</button>
                                <button type="submit" class="btn bg-gradient-primary">KAYDET</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
