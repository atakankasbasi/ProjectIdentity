@model UserEditViewModel
<div class="col-12 col-xl-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <div class="row">
                <div class="col-md-8 d-flex align-items-center">
                    <h6 class="mb-0">Ön Yazım</h6>
                </div>
                <div class="col-md-4 text-end">
                    <a href="javascript:;">
                        <i class="fas fa-user-edit text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Profilimi Düzenle"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-3 pb-1">
            <p class="text-sm">
                Hi, I’m @ViewBag.name, Decisions: If you can’t decide, the answer is no. If two equally difficult paths, choose the one more painful in the short term (pain avoidance is creating an illusion of equality).
            </p>
            <hr class="horizontal gray-light my-4">
            <ul class="list-group">
                <li class="list-group-item border-0 ps-0 pt-0 text-sm mb-2"><strong class="text-dark">Kullanıcı Adı</strong> &nbsp; @ViewBag.name  @ViewBag.surname</li>
                <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Ünvan</strong> &nbsp; Jr.Software Developer</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Telefon:</strong> &nbsp; (507) 123 44 12</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Mail:</strong> &nbsp; @ViewBag.Mail</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Lokasyon:</strong> &nbsp; TÜRKİYE</li>
                <li class="list-group-item border-0 ps-0 pb-0">
                    <strong class="text-dark text-sm">Sosyal Medya:</strong> &nbsp;
                    <a class="btn btn-facebook btn-simple mb-0 ps-1 pe-2 py-0" href="javascript:;">
                        <i class="fab fa-facebook fa-lg"></i>
                    </a>
                    <a class="btn btn-twitter btn-simple mb-0 ps-1 pe-2 py-0" href="javascript:;">
                        <i class="fab fa-twitter fa-lg"></i>
                    </a>
                    <a class="btn btn-instagram btn-simple mb-0 ps-1 pe-2 py-0" href="javascript:;">
                        <i class="fab fa-instagram fa-lg"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
