
@{
    ViewData["Title"] = "MailWrite";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<div class="main-content position-relative max-height-vh-100 h-100 border-radius-lg" id="panel">
    <div class="container-fluid pt-3 mt-2">
       <div class="content-wrapper">
            
            @await Html.PartialAsync("~/Views/Mail/PartialView/MailMenuPartialView.cshtml")


            <!-- Main content -->
            <section class="content">
                <div class="row">
                    @await Html.PartialAsync("~/Views/Mail/PartialView/SolMenuPartialView.cshtml")



                    <div class="col-md-9">
                        <div class="card card-primary card-outline  ">

                            <div class="card card-primary card-outline bg-gradient-dark ">
                                @* <div class="card-header p-4 pt-3 pb-0">
                                <h3 class="">Yeni Mail Oluştur</h3>
                                </div>*@
                                <!-- /.card-header -->

                                <div class="card-body">
                                    <div class="row form-group p-3">

                                        <div class="col-md">
                                            <input class="form-control" placeholder="Kime :">
                                        </div>

                                        <div class="col-md">
                                            <input class="form-control" placeholder="Konu :">
                                        </div>
                                    </div>






                                    <div class="form-group p-3 pt-1 pb-0 ">
                                        <textarea id="compose-textarea" class="form-control" style="height: 400px">

                    </textarea>
                                    </div>

                                    <div class="form-group p-3 pb-0 d-flex justify-content-end">
                                        <div class="btn btn-default btn-file">
                                            <input type="file" name="attachment">
                                        </div>
                                    </div>
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer d-flex justify-content-end p-4 pt-0 ">
                                    <div class="float-right">
                                        <button type="button" class="btn btn-warning"><i class="fas fa-pencil-alt" style="margin-right:0.5rem"></i> Düzenle</button>
                                        <button type="submit" class="btn btn-secondary"><i class="far fa-envelope" style="margin-right:0.5rem"></i> Gönder</button>

                                        <button type="reset" class="btn btn-primary"><i class="fas fa-times" style="margin-right:0.5rem"></i> Sİl</button>
                                    </div>
                                    <!-- /.card-footer -->
                                </div>





                            </div>


                        </div>
                    </div>
                </div>
            </section>
        </div>






    </div>
</div>
